    {
      "id": "ministry-health",
      "name": "Vietnam Ministry of Health",
      "base_url": "https://moh.gov.vn",
      "type": "government",
      "language": "vi",
      "crawl_frequency": "daily",
      "enabled": true,
      "selectors": {
        "content": ".content-main, .article-content, .post-content",
        "title": "h1, .title, .article-title",
        "date": ".publish-date, .date, .article-date",
        "author": ".author, .by-author"
      },
      "rate_limit": 2.0,
      "max_pages": 100,
      "start_urls": [
        "https://moh.gov.vn/tin-tuc",
        "https://moh.gov.vn/van-ban",
        "https://moh.gov.vn/hoat-dong-chuyen-mon"
      ],
      "exclude_patterns": [
        "/admin/",
        "/login/",
        "/search/",
        ".pdf$",
        ".doc$"
      ]
    },
