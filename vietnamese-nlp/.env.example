# Vietnamese NLP Service Configuration
# Copy this file to .env and adjust values for your environment

# Server Configuration
PORT=8080
FLASK_DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO

# Redis Configuration (optional - for caching)
REDIS_URL=redis://localhost:6379/6

# Cache TTL Settings (in seconds)
CACHE_TTL_TOKENIZE=3600    # 1 hour
CACHE_TTL_ENTITIES=1800    # 30 minutes  
CACHE_TTL_ANALYSIS=1800    # 30 minutes

# Production Environment Variables
# Uncomment and set these for production deployment
# REDIS_URL=redis://your-redis-server:6379/6
# LOG_LEVEL=WARNING
# FLASK_DEBUG=false
